{
    "compilerOptions": {
        "target": "ES2018",
        "module": "esnext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "strict": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
